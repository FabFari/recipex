<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login.mainRelative"
    tools:context=".activities.Login"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src ="@drawable/recipex_logo_shape"
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageView"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src ="@drawable/recipex_font_logo"
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageView_font"/>

        <Button
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="Accedi con Google"
            android:id="@+id/sign_in_button"
            android:padding="4dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="#dc4e41"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/login"
            android:padding="4dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginTop="20dp"/>
        <!--
        <TextView
            android:text="Login"
            android:layout_height="wrap_content"
            android:layout_width="310dp"
            android:textAllCaps="false"
            android:padding="4dp"
            android:id="@+id/login"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below ="@+id/sign_in_button"/>
        -->

    </LinearLayout>

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/login.progress_view"
        android:layout_centerInParent="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true" />

</RelativeLayout>
